@import url("https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap");

body {
  margin: 0px;
  padding: 0px;
  background-color: #ffffff;
  font-family: "Bebas Neue", "Lato", sans-serif;
}
* {
  box-sizing: border-box;
}
ul {
  list-style: none;
}
a {
  text-decoration: none;
}
button {
  outline: none;
  border: none;
}
input {
  outline: none;
  border: none;
}
.logo img {
  width: 32px;
}

.btn {
  border-radius: "5px";
}

.btn :hover {
  border-radius: "0px";
}

#main {
  width: 100%;
  height: 768px;
  position: relative;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url("./assets//images/banner.png");
}

nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 1;
  background-color: transparent;
  transition: 0.6s ease-in-out;
}
nav.active {
  box-shadow: 5px 10px 30px rgba(0, 0, 0, 0.157);
  background-color: #ffffff;
}
nav ul {
  display: flex;
}
nav ul li a {
  font-family: "Bebas Neue";
  height: 40px;
  line-height: 43px;
  margin: 3px;
  padding: 0px 22px;
  display: flex;
  font-size: 1.2rem;
  text-transform: uppercase;
  font-weight: 500;
  color: #0f0c0a;
  letter-spacing: 1px;
  border-radius: 3px;
  transition: 0.2s ease-in-out;
}
nav ul li a:hover {
  background-color: #e03f0d;
  color: #ffffff;
  box-shadow: 5px 10px 30px rgba(243, 40, 5, 0.336);
  transition: all ease 0.2s;
}
nav .menu-btn,
.menu-icon {
  display: none;
}

.header-heading {
  font-family: "Montserrat";
  width: 900px;
  position: absolute;
  left: 25%;
  top: 55%;
  text-align: left;
  transform: translate(-25%, -55%);
}
.header-heading span {
  font-family: "Alfa Slab One";
  color: #e03f0d;
  border-bottom: 2px solid #d42e059c;
}
.header-heading .details {
  font-size: 23px;
  color: #000000;
}
.header-heading h3 {
  font-family: "Bebas Neue";
  font-size: 1.6rem;
  margin: 0px;
  letter-spacing: 2px;
  color: #291a0f;
}
.header-heading h1 {
  font-family: "Alfa Slab One";
  font-size: 4rem;
  margin: 0px;
  letter-spacing: 2px;
  color: #3d2514;
}
.header-btns {
  display: flex;
  margin-top: 40px;
}
.header-btn {
  width: 160px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.4rem;
  font-family: "Lato";
  background-color: #e03f0d;
  box-shadow: 5px 10px 30px rgba(182, 4, 4, 0.336);
  border-radius: 5px;
  color: #ffffff;
}
.header-btn:hover {
  background-color: transparent;
  transition: all ease 0.5s;
  color: #38291e;
  border: 2px solid #e03f0d;
}

#features {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  font-family: "Lato";
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 40px;
  background-color: #ffffff;
}

#features h1 {
  font-family: "Alfa Slab One";
  letter-spacing: 2px;
  color: #3d2514;
  font-size: 3rem;
}

#features p {
  font-family: "Bebas Neue";
  letter-spacing: 1px;
  color: #3d2514;
  font-size: 0.8rem;
  margin-top: -15px;
  margin-bottom: 35px;
}

.s-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.s-container > h1 {
  font-family: "Bebas Neue" !important;
  font-size: 5rem;
  letter-spacing: 3px;
  color: #ff4213;
}

.s-container span {
  font-family: "Bebas Neue";
  font-size: 1.5rem;
  color: #ff1414;
  letter-spacing: 1.7px;
}

.a-container {
  display: flex;
  justify-content: center;
  align-content: center;
}
.a-box {
  background-color: #ffffff;
  width: 300px;
  height: 450px;
  margin: 20px;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0px 10px 12px rgba(0, 0, 0, 0.1);
  transition: 0.3s ease-in-out;
  position: relative;
}
.a-b-img {
  width: 100%;
  height: 60%;
}
.a-b-img img {
  padding: 25px;
  width: 100%;
  height: 100%;
}
.a-box:hover {
  box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.1);
}

.s-b-text {
  width: 100%;
  height: 40%;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex-direction: column;
}
.a-b-text h2 {
  color: #e03f0d;
}

h2 .center-star {
  max-width: 70%;
}
.center-star {
  line-height: 1em;
  position: relative;
  outline: 0;
  border: 0;
  color: black;
  text-align: center;
  height: 1.5em;
  opacity: 0.4;
}

.center-star::before {
  content: "";
  background: linear-gradient(to right, transparent, #616161, transparent);
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  height: 1px;
}

.center-star::after {
  content: attr(data-content);
  position: relative;
  display: inline-block;
  color: rgb(107, 107, 107);

  padding: 0 0.5em;
  line-height: 1.5em;
  color: #8f8f8f;
  background-color: #ffffff;
}

.app_section {
  margin: 10rem 9%;
  border-radius: 0.5rem;
  background-color: rgb(235, 55, 0);
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  position: relative;
  padding: 14rem 0;
}

.app_section .app_image {
  position: absolute;
  left: 15%;
  width: 275px;
  height: 548.09px;
}

.app_section .app_image img {
  width: 100%;
}

.app_section .app_content {
  margin-top: -20px;
  position: absolute;
  right: 5%;
  width: 45%;
}

.app_section .app_content h3 {
  font-size: 4.2rem;
  color: #ffffff;
  margin-bottom: 4rem;
}

.app_section .app_content p {
  margin-bottom: 2rem;
  width: 65%;
  color: #ffffff;
  letter-spacing: 1.2px;
  margin-top: -4rem;
}

.app_section .app_content .app_links img {
  margin-right: 3rem;
  margin-bottom: 2rem;
}

@media (max-width: 1190px) {
  #main {
    background-size: 1150px !important;
  }
  .header-heading {
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }
  .header-heading h2 {
    font-size: 1.5rem;
  }
  .header-heading h1 {
    font-size: 3rem;
  }
  .header-heading .details {
    font-size: 1rem;
  }
  #features {
    height: auto;
  }
  .s-container {
    flex-wrap: wrap;
  }
  .a-container {
    flex-wrap: wrap;
  }
  .a-box {
    flex-grow: 1;
  }
  .a-b-img img {
    object-fit: contain;
  }

  .app_section .app_image {
    max-width: 20rem;
  }
}

@media (max-width: 970px) {
  #main {
    height: 650px;
  }
  .header-heading {
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }
  .header-btn {
    margin-left: 20%;
    margin-top: 20px;
  }

  #features {
    margin-bottom: 100px;
  }

  .app_section {
    grid-template-columns: 1fr;
    padding: 20rem 0;
    margin: 3rem 9%;
  }
  .app_section .app_content {
    width: 80%;
    left: 50%;
    transform: translateX(-50%);
  }
  .app_section .app_content h3 {
    font-size: 3.5rem;
    margin-bottom: 5rem;
  }

  .app_section .app_content p {
    width: 70%;
  }

  .app_section .app_image {
    opacity: 0.9;
    top: 25%;
    left: 70%;
    max-width: 10rem;
  }

  .app_section .app_content .app_links img {
    width: 8rem;
    margin-right: 0;
  }
}

@media (max-width: 600px) {
  .header-heading {
    width: 60%;
  }
  .s-container {
    width: 75%;
    text-align: center;
  }

  .s-container span {
    font-size: 1.3rem;
    letter-spacing: 1.4px;
  }
  .s-container h1 {
    font-size: 3.5rem;
    letter-spacing: 3px;
  }
  .app_section .app_image {
    display: none;
  }
  .app_section {
    grid-template-columns: 1fr;
    padding: 20rem 0;
    margin: 3rem 9%;
  }
  .app_section .app_content {
    width: 85%;
    left: 50%;
    transform: translateX(-50%);
  }
  .app_section .app_content h3 {
    font-size: 3.5rem;
    margin-bottom: 5rem;
  }

  .app_section .app_content p {
    width: 100%;
  }

  .app_section .app_content .app_links img {
    width: 8rem;
    margin-right: 0;
  }
}

@media (max-width: 1100px) {
  .menu-icon {
    display: block;
  }
  nav {
    justify-content: space-between;
    height: 65px;
    padding: 0px 30px;
  }
  .logo img {
    width: 32px;
  }
  .header-btns {
    margin: 0;
  }
  .menu {
    display: none;
    position: absolute;
    top: 65px;
    left: 0px;
    background-color: #ffffff;
    border-bottom: 4px solid #ff1414;
    width: 100%;
    padding: 0px;
    margin: 0px;
  }
  .menu li {
    width: 100%;
  }
  nav .menu li a {
    width: 100%;
    height: 40px;
    justify-content: center;
    align-items: center;
    margin: 0px;
    padding: 25px;
    border: 1px solid rgba(38, 38, 38, 0.03);
  }
  nav .menu-icon {
    cursor: pointer;
    float: right;
    padding: 28px 20px;
    position: relative;
    user-select: none;
  }
  nav .menu-icon .nav-icon {
    background-color: #3d2514;
    display: block;
    height: 2px;
    position: relative;
    transition: background 0.2s ease-out;
    width: 24px;
  }
  nav .menu-icon .nav-icon:before,
  nav .menu-icon .nav-icon:after {
    background: rgb(255, 255, 255);
    content: "";
    display: block;
    height: 100%;
    position: absolute;
    transition: all ease-out 0.2s;
    width: 100%;
  }
  nav .menu-icon .nav-icon:before {
    top: 6px;
    background-color: #3d2514;
  }
  nav .menu-icon .nav-icon:after {
    top: -6px;
    background-color: #3d2514;
  }
  nav .menu-btn:checked ~ .menu-icon .nav-icon {
    background: transparent;
  }
  nav .menu-btn:checked ~ .menu-icon .nav-icon:before {
    transform: rotate(-45deg);
    top: 0;
    background-color: #3d2514;
  }
  nav .menu-btn:checked ~ .menu-icon .nav-icon:after {
    transform: rotate(45deg);
    top: 0;
    background-color: #3d2514;
  }
  nav .menu-btn {
    display: none;
  }
  nav .menu-btn:checked ~ .menu {
    display: block;
  }
}
